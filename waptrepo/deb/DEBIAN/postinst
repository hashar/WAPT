#!/bin/bash

echo "Creating wapt root diretory" 
mkdir -p /var/www/wapt/
mkdir -p /var/www/wapt-host
mkdir -p /var/www/wapt-group
mkdir -p /etc/tis
chown www-data:www-data /var/www/wapt/
chown www-data:www-data /var/www/wapt-host
chown www-data:www-data /var/www/wapt-group
ln -s /opt/wapt/waptrepo/waptpackage.py /var/www/wapt/
ln -s /opt/wapt/waptrepo/wapt-scanpackages.py /var/www/wapt/
chmod +x /opt/wapt/waptrepo/waptpackage.py
chmod +x /opt/wapt/waptrepo/wapt-scanpackages.py
/usr/bin/python /var/www/wapt/wapt-scanpackages.py /var/www/wapt/
chmod +x /opt/wapt/waptrepo/configure_zsync.sh
printf '\e[1;31m%-6s\e[m\n' "the installation of waptrepo is finished !!"
printf '\e[1;31m%-6s\e[m\n' "if you want to use zsync please launch /opt/wapt/waptrepo/configure_zsync.sh"
